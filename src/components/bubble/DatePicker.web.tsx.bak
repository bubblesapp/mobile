import React, {MutableRefObject, useRef} from 'react';
import ReactDatePicker from 'react-datepicker';
import 'react-datepicker/dist/react-datepicker.css';

type Props = {
  visible: boolean;
  onDatePicked: (date: Date) => void;
  onCancel: () => void;
  anchorRef: MutableRefObject<any>;
};

export const DatePicker: React.FC<Props> = ({visible, anchorRef}) => {
  const reactDatePickerRef = useRef<ReactDatePicker>();
  reactDatePickerRef.current?.setOpen(visible);
  return (
    <>
      <ReactDatePicker
        ref={reactDatePickerRef}
        customInput={<></>}
      />
    </>
  );
};
